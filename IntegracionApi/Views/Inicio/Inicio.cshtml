@model IntegracionApi.ViewModel.TopAnimeViewModel
<div class="row">
    <div class="col-md-8" style="background-color: aqua;">
        dasdas
    </div>
    <div class="col-md-4" style="background-color: bisque;">
       <div class="sidebar">
           <div class="container">
                <table>
                    <thead>
                        <tr>
                            <th><h1>Top</h1></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var anime in Model.Items)
                        {
                            <tr>
                                <td>
                                    <div class="card mb-3" style="max-width: 540px;">
                                        <div class="row g-0">
                                            <div class="col-md-4">
                                                @* <img src="https://cdn.myanimelist.net/images/anime/1447/155444l.jpg" class="img-fluid rounded-start" alt="..."> *@
                                            </div>
                                            <div class="col-md-8">
                                                <div class="card-body">
                                                    <h5 class="card-title">@anime.Data.Title</h5>
                                                    <p class="card-text">@anime.Data.Episodes</p>
                                                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }


                </table>
           </div>

       </div>
    </div>
</div>